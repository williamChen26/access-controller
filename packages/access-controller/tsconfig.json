{
  "compilerOptions": {
    "declaration": true,
    "target": "ES5",
    "module": "ES2015",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitThis":true,
    "baseUrl": ".",
    "noErrorTruncation": true,
    "noEmitOnError": false,
    "paths": {
      "@/*": ["src/*"],
      "tslib": ["node_modules/tslib/tslib.d.ts"],
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": ["tests", "node_modules", "dist", "cypress", "**/*.spec.js"]
}
